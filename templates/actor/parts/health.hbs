<div class="flex-column">
    <label for="data.data.health" class="resource-label">{{localize "WOD20.health.health"}}</label>

    <!--are resource-counter flexrow flex-center flex-between actually in use here?-->
    <div class="">
        <div 
            class="resource-counter health" 
            data-states="/:superficial,x:aggravated,-:lethal"  
            data-max="{{data.data.health.max}}" 
            data-lethal="{{data.data.health.lethal}}" 
            data-superficial="{{data.data.health.superficial}}" 
            data-aggravated="{{data.data.health.aggravated}}" 
            data-name="data.health"
            >
            {{#numLoop data.data.health.max}}
            <div class="resource-counter-step flex" data-index="{{this}}" data-state=""></div>
            {{/numLoop}}
        </div>
    </div>
</div>