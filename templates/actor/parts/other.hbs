<div class="tab flex-center" data-group="primary" data-tab="other">
    <label class="resource-label">{{localize "WOD20.other.customrolls"}}</label>
    <ol class="items-list flex-left">
        <li class="item flexrow item-header resource-label">
        <div class="item-name">{{localize "WOD20.generic.name"}}</div>
        <div class="item-name">{{localize "WOD20.other.attribute"}}</div>
        <div class="item-name">{{localize "WOD20.other.skill"}}</div>
        <div class="item-controls">
            <a
            class="item-control item-create"
            title="{{localize 'WOD20.generic.add'}}"
            data-type="customRoll"
            ><i class="fas fa-plus"></i> {{localize "WOD20.generic.add"}}
            </a>
        </div>
        </li>
        {{#each actor.customRolls as |roll id|}}
        <li class="item flexrow" data-item-id="{{roll._id}}">
        <div
            class="item-image custom-rollable"
            data-dice1="{{roll.data.dice1}}"
            data-dice2="{{roll.data.dice2}}"
            data-name="{{roll.name}}"
        >
            <img
            src="{{roll.img}}"
            title="{{roll.name}}"
            width="24"
            height="24"
            alt="{{roll.name}}"
            />
        </div>
        <h4 class="item-name">{{roll.name}}</h4>
        <h4 class="item-name">
            {{localize (generateSkillLabel roll.data.dice1)}}
        </h4>
        <h4 class="item-name">
            {{localize (generateSkillLabel roll.data.dice2)}}
        </h4>
        <div class="item-controls">
            <a class="item-control item-edit" title="{{localize 'WOD20.generic.edit'}}"
            ><i class="fas fa-edit"></i
            ></a>
            <a class="item-control item-delete" title="{{localize 'WOD20.generic.delete'}}"
            ><i class="fas fa-trash"></i
            ></a>
        </div>
        </li>
        {{/each}}
    </ol>
    <label class="resource-label flex-center pad-top">{{localize "WOD20.other.notes"}}</label>
    {{editor content=data.data.notes target="data.notes" button=true owner=owner editable=editable}}
</div>